{# Added the followign 2 lines in order to get this working inside a vagrant project 
  https://github.com/kelseyhightower/kubernetes-the-hard-way/issues/301#issuecomment-422532124
#}
[plugins.cri]
  stream_server_address = "{{ eth1_ip_address }}"
[plugins]
  [plugins.cri.containerd]
    snapshotter = "overlayfs"
    [plugins.cri.containerd.default_runtime]
      runtime_type = "io.containerd.runtime.v1.linux"
      runtime_engine = "/usr/local/bin/runc"
      runtime_root = ""
    [plugins.cri.containerd.untrusted_workload_runtime]
      runtime_type = "io.containerd.runtime.v1.linux"
      runtime_engine = "/usr/local/bin/runsc"
      runtime_root = "/run/containerd/runsc"
